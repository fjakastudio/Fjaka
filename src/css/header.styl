#header 
    position: fixed;
    left: 2.5rem;
    right: 2.5rem;
    top: 2.5rem;
    z-index: 10
    display: flex;
    justify-content: space-between
    align-items: center
    opacity: 1
    transition: .3s ease-in

    &.hide
        opacity: 0

    @media $mobile
        left: 1rem;
        right: 1rem;
        top: 1.5rem;
        opacity: 1 !important
        position absolute

.logo
    margin: 0
    z-index: 2;
    position: relative;


.logo svg

    @media $desktop-l
        height: 40px;
        width: 100%;

.logo path
    transition: .3s ease-in

#header nav .active a::before
    transform-origin: 0% 50%;
    transform: scale3d(1, 1, 1);

#header nav a 
    font-size: clamp(1rem, 0.3vw + 1rem, 1.625rem);
    text-decoration: none
    font-weight: 500
    position relative

    @media $mobile
        font-family: p22-mackinac-pro, serif;
        font-weight: 800
        font-size: 3rem
        margin-bottom: 1rem;
        display: block;
        color: currentColor !important

    &::before 
        content:''
        position: absolute;
        width: 100%;
        height: 1px;
        top: 100%;
        left: 0;
        pointer-events: none;
        transform-origin: 100% 50%;
        transform: scale3d(0, 1, 1);
        transition: transform 0.3s;

        @media $mobile
            height: 3px
            background: var(--main-yellow) !important


    &:hover::before 
        transform-origin: 0% 50%;
        transform: scale3d(1, 1, 1);


#header ul 
    list-style: none
    margin: 0
    padding: 0
    display: flex

#header li
    margin: 0 0 0 2rem
    padding: 0

    @media $mobile
        margin: 0 0 0 1rem

#header li:first-child
    margin: 0