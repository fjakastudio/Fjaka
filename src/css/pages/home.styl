body.front 
    color: var(--main-yellow)
    background-color: var(--main-bg-color)

body.front .logo path 
    fill: var(--main-yellow)

.front .header nav a
    color: var(--main-yellow)

.front .header nav a::before 
    background: var(--main-yellow)

.front .menu-icon span {
    background-color: var(--main-yellow)
}

.shadow-front 
    position absolute
    top: -6rem
    left: 0
    right: 0
    z-index: -1

    @media $mobile
        top: -1rem

.shadow-front-bottom 
    position absolute
    bottom: -6rem
    left: 0
    right: 0
    z-index: -1
    transform: rotate(180deg)

    @media $mobile
        bottom: -1rem

.front-info
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15vw 0 12vw;
    overflow: hidden

    @media $mobile
        padding: 5rem 0
        min-height: 0;

.front-info__text 
    padding: 0 2rem
    text-align: center
    max-width: 60%

    @media $mobile
        max-width: 100%
        padding: 1rem

        h2
            font-size: clamp(2rem, 4.6vw, 7.625rem);
            line-height: 1.1;
            margin: 0;