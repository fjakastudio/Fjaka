body.front 
    color: #fff;
    background-color: #080619;

.front .wrapper
    background-color: #171259;

body.front .logo path 
    fill: #fff;

.front #header nav a
    color: #fff;

.front #header nav a::before 
    background: #fff;

.front .menu-icon span {
    background-color: #fff;
}

.front #header.nori-active path
    fill: #040875;

.front #header.nori-active nav a
    color: #040875;

.front #header.nori-active nav a::before 
    background: #040875;

.front .nori-active .menu-icon span {
    background-color: #040875;
}

.shadow-front 
    position absolute
    top: -6rem
    left: 0
    right: 0
    z-index: 0

    @media $mobile
        top: -2rem

.shadow-front-bottom 
    position absolute
    bottom: -6rem
    left: 0
    right: 0
    z-index: 0
    transform: rotate(180deg)

    @media $mobile
        bottom: -2rem

.front-info
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12vw 0;

    @media $mobile
        padding: 5rem 0
        min-height: 0;

.front-info__text 
    padding: 0 2rem
    text-align: center
    max-width: 60%
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
    justify-content: center;

    @media $mobile
        max-width: 100%
        padding: 1rem

        h2
            font-size: clamp(2rem, 4.6vw, 7.625rem);
            line-height: 1.1;
            margin: 0;

    h1
        margin-bottom: .5rem