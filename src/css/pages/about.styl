body.about 
    color: var(--main-about-primary)
    background-color: var(--main-bg-about)

body.about .logo path 
    fill: var(--main-about-primary)

.about .header nav a
    color: var(--main-about-primary)

.about .header nav a::before 
    background: var(--main-about-primary)

.about .menu-icon span {
    background-color: var(--main-about-primary)
}   

.about .wrapper
    background-image: url('../assets/images/lines-bg.webp')
    background-position: 45% -10px;
    background-size: 2759px;
    background-repeat: no-repeat;
    padding: 0

    @media $mobile
        overflow: hidden

.about .wrapper-inner
    padding: 0 2.5rem

    &--burgundy
        background: url('../assets/images/shadow-dissolve-burgundy.webp') no-repeat;
        background-color: #572A40
        background-size: 100% 40%
        color: #ECD444 !important
        padding-top: calc(2rem+11.112vw) // 7 to match red-brick margin-bottom
        padding-bottom: 5.556vw;
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-gap: 2.5rem;
        color: var(--text)

        @media $mobile
            padding: 8rem 1rem 2rem 1rem;
            grid-gap: 1rem
            background-size: 100% 30%;

    &--pink
        background: url('../assets/images/bg-about.webp') repeat;
        background-size: 130px
        background-color: #FE938C
        color: #243119 !important
        padding-top: 5.556vw;
        padding-bottom: 11.112vw;
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-gap: 2.5rem;
        color: var(--text)

        @media $mobile
            padding: 2.5rem 1rem 5rem 1rem
            grid-gap: 1rem
            margin-bottom: 1rem

.red-brick
    margin-bottom: -7.556vw; // Margin minus to get burgundy section to fall behind

    @media $mobile
        height: 5rem;
        position: absolute;
        object-fit: cover;

.wrapper-about
    width: 55vw
    margin: 0 auto
    padding: 0 2.5rem 5.556vw
    max-width: 65rem

    @media $mobile
        width: 100%
        max-width: none
        padding: 0 1rem 1rem

.about-hand
    position: relative;
    height: 41rem;
    margin-bottom: 2rem

    @media $mobile
        margin-bottom: 0

.hand-ball-graphic
    position: absolute;
    bottom: 0;
    left: -130px;
    right: 0;
    margin: 0 auto;

    @media $mobile
        bottom: 50px
        left: -60px

@keyframes upNdown {
    0% {transform: translateY(0px);}
    50% {transform: translateY(-5px);}
    100%{transform: translateY(0px);}
}

#hand
    position: absolute;
    z-index: 1;
    width: 100%;
    max-width: 400px;
    margin-top: 40px;
    left: -50px;
    right: 0;
    margin: 50px auto 0;
    animation-name: upNdown;
    animation-iteration-count: infinite;
    animation-duration: 4s;

    @media $mobile
        max-width: 330px;
        margin-top: 100px;
        left: 0;

.col-text
    width: calc(50% - 1.25rem)
    float: left
    margin-right: 2.5rem

    &:last-child
        margin-right: 0

.row
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;
    color: var(--text)

    @media $mobile
        grid-gap: 1rem