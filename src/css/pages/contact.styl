body.contact 
    color: #2CAFC7
    background-color: #131313

body.contact .logo path 
    fill: #2CAFC7

.contact .header nav a
    color: #2CAFC7

.contact .header nav a::before 
    background: #2CAFC7   

.contact .wrapper
    background: url('../assets/images/stars.svg') repeat

.contact .wrapper-inner
    display: grid;
    // grid-template-rows: repeat(6, 1fr);
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;

    @media $mobile
        grid-gap: 1.5rem

.contact-graphic
    position absolute
    left: 0
    top: 0

    @media $desktop-l
        width: 25%;

    @media $mobile
        display: none

h5,
.heading-five 
    font-size: clamp(1.5rem, 1.5vw + 1rem, 3rem);
    margin: 0 0 1rem
    line-height: 1.1
    letter-spacing: .5px