.header-big
    height: 100vh;
    width: 100%;
    position: relative;
    z-index: 1
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
    justify-content: center;

    @media $mobile
        padding: 0 1rem

.header-big h1 
    width: 58%
    padding-top: 32px

    @media $mobile
        width: 100%
        padding: 0
        margin: 0

.header-big__bg 
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1
    background: #08052d
    overflow: hidden

.header-big__bg iframe
    height: 110%;
    width: 110%;
    position: absolute;
    top: 0;
    left: -5%;
    right: 0;
    bottom: 0;
    opacity: .3
    z-index: -5
