h1,
h2,
h3,
h4,
h5 
    font-family: p22-mackinac-pro, serif;
    font-weight: 800

.big-header-one
    font-size: clamp(2.5rem, 4.8vw + 1.25rem, 5.625rem);
    line-height: 1.07
    margin: 0 0 2rem

h1,
.heading-one 
    font-size: clamp(2.5rem, 3.6vw + 1rem, 7.625rem)
    line-height: 1.1
    margin: 0 0 2rem
    letter-spacing: .5px

h2,
.heading-two
    font-size: clamp(2rem, 3vw + 1.1rem, 5rem);
    margin: 0 0 1.5rem
    line-height: 1.1
    letter-spacing: .5px

h3,
.heading-three
    font-size: clamp(2rem, 3vw + 1.1rem, 5rem);
    margin: 0 0 1rem
    line-height: 1.1
    letter-spacing: .5px

h4,
.heading-four 
    font-size: clamp(2rem, 1.75vw + 1rem, 4rem);
    margin: 0 0 1rem
    line-height: 1.1
    letter-spacing: .5px

.big-paragraph
    font-size: clamp(1rem, 0.75vw + 0.75rem, 2rem);
    line-height: 1.4
    margin: 0 0 1rem

p,
.paragraph
    font-size: clamp(1rem, 1.17vw + 0.5rem, 2rem);
    margin: 0 0 1.5rem
    line-height: 1.4

.list
    font-size: clamp(1rem, 1.17vw + 0.5rem, 2rem);
    margin: 0 0 1.5rem
    line-height: 1.4

.p22
    font-family: p22-mackinac-pro, serif;
    font-weight: 800

.text-link
    font-size: clamp(1rem, 1vw + 0.5rem, 2rem);
    margin: 0 0 1rem
    line-height: 1.3
    text-decoration: none
    position relative

    &::before 
        content:''
        position: absolute;
        width: 100%;
        height: 1px;
        top: 100%;
        left: 0;
        pointer-events: none;
        transform-origin: 100% 50%;
        transform: scale3d(0, 1, 1);
        transition: transform 0.3s;
        background: currentcolor

    &:hover::before 
        transform-origin: 0% 50%;
        transform: scale3d(1, 1, 1);

.hide
    display: none

.footer-link
    text-decoration: none
    position relative
    margin-bottom: .5rem
    display: inline-block

    &::before 
        content:''
        position: absolute;
        width: 100%;
        height: 2px;
        border-radius: 2px
        top: 100%;
        left: 0;
        pointer-events: none;
        transform-origin: 100% 50%;
        transform: scale3d(0, 1, 1);
        transition: transform 0.3s;
        background: currentcolor

    &:hover::before 
        transform-origin: 0% 50%;
        transform: scale3d(1, 1, 1);

.uppercase
    text-transform: uppercase
    text-align: center
    font-weight: 600
    line-height: 1.3

    @media $mobile
        font-size: 24px;
        text-transform: none;
        text-align: left;

.fullsize-link
    position absolute
    left: 0
    right: 0
    bottom: 0
    top: 0
    z-index: 1

a
    color: currentColor
    text-decoration: none

.small-margin
    margin: 0 0 0.5rem