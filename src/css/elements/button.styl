.btn 
    padding: 1rem 2rem
    border-radius: 100px
    color: var(--btn-color)
    text-decoration: none
    font-weight: 500
    transition: .3s ease-in;
    display: inline-block    
    background: transparent
    font-size: clamp(1rem, .9vw + 0.5rem, 1.5rem);
    cursor pointer
    transition: ease-in .3s;

    &.play-reel

        @media $mobile
            display: none

    @media $mobile
        padding: 0.75rem 1.5rem;

    &--outline
        border: 1px solid var(--btn-color)

        &:hover
            background-color: var(--btn-color)
            color: var(--btn-text)

.btn-wrapper
    display: flex
    margin-top: 1rem

    @media $mobile
        flex-direction: column
        width: 100%
        padding: 1rem 1rem 0 1rem

    > .btn 
        margin-right: 2rem

        @media $mobile
            margin-bottom: 1rem
            margin-right: 0

            &:last-child
                margin-bottom: 0

.btn-category 
    display: block;
    border-radius: 100px;
    padding: 2px 8px;
    font-size: 1rem;
    line-height: 1rem;
    border: 1px solid var(--main-work-primary);
    margin-right: 0.5rem;
    height: 1.5rem;

    &:last-child
        margin-right: 0