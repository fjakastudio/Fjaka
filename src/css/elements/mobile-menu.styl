.active-menu .logo path
    fill: var(--main-yellow) !important

.active-menu.header nav
    opacity: 1;
    visibility: visible;

body.active-menu
    background: #0e0b36 !important

.header.active-menu
    @media $mobile
        mix-blend-mode: normal !important;

@media $mobile
    .header nav
        position: fixed;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        background: #0e0b36
        color: var(--main-yellow);
        z-index: 1
        padding-top: 5rem
        align-items: center;
        justify-content: center;
        display: flex
        transition: .6s ease;
        visibility: hidden;
        opacity: 0

    .header ul
        flex-direction: column

    .header li
        text-align: center

.menu-icon
    width: 2rem;
    height: 1.5rem;
    position: absolute;
    right: 1rem
    top: .5rem
    background: none
    border: none
    z-index: 2
    display: none

    @media $mobile
        display: block

.menu-icon span {
    width: 100%;
    height: 3px;
    display: block;
    border-radius: 5px;
    transition: all 0.3s ease;
}
.menu-icon span:nth-child(1) {
    position: absolute;
    top: 0;
}
.menu-icon span:nth-child(2) {
    position: absolute;
    top: calc(50% - 4px);
}
.menu-icon span:nth-child(3) {
    position: absolute;
    top: calc(100% - 8px);
}
.active-menu .menu-icon span:nth-child(2) {
    opacity: 0;
}
.active-menu .menu-icon span:nth-child(1) ,
.active-menu .menu-icon span:nth-child(3) {
    background-color: var(--main-yellow)
    top: calc(50% - 4px);
    top: .5rem;
}
.active-menu .menu-icon span:nth-child(1) {
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -o-transform: rotate(45deg); 
}
.active-menu .menu-icon span:last-child {
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
}