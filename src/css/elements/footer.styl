.big-footer
    background: var(--background-footer)
    color: var(--background-footer-text)
    display: grid
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;
    padding-top: 6.112vw;
    padding-bottom: 20vw;
    border-radius: 4rem 4rem 0 0
    margin-top: -5rem
    position relative
    overflow: hidden

    &--dark
        background: linear-gradient(180deg, rgba(111,143,114,1) 68%, rgba(94,121,97,1) 68%);

    &--blue
        background: linear-gradient(180deg, rgba(0,129,167,1) 68%, rgba(0,98,128,1) 68%);

.big-footer__center
    grid-column-start: 4;
    grid-column-end: 10;
    text-align: center;

.footer-graphic-one
    position: absolute;
    left: -40px;
    max-width: 27vw;
    bottom: 60px;

.footer-graphic-two
    position: absolute;
    right: -60px;
    max-width: 23vw;
    bottom: 120px;

.post-footer
    background: var(--background-post-footer)
    color: var(--background-footer-text)
    display: grid
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;
    padding: 4.5rem 2.5rem

    ul
        list-style: none
        margin: 0

    li:last-child a
        margin-bottom: 0

    a
        color: currentcolor
        text-decoration: none

    .col-3 p
        margin-top: 1rem

