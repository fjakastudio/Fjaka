.big-footer
    background: var(--background-footer)
    color: var(--background-footer-text)
    display: grid
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;
    padding-top: 6.112vw;
    padding-bottom: 20vw;
    border-radius: 4rem 4rem 0 0
    margin-top: -5rem
    position relative
    overflow: hidden

    @media $mobile
        grid-gap: 1.5rem
        padding-bottom: 7rem

    &--dark
        background: linear-gradient(180deg, rgba(111,143,114,1) 68%, rgba(94,121,97,1) 68%);

    &--blue
        background: linear-gradient(180deg, rgba(0,129,167,1) 68%, rgba(0,98,128,1) 68%);

    &--green
        background: linear-gradient(180deg, rgba(29, 114, 96, 1) 68%, rgba(22, 99, 83, 1) 68%);

    &--margin
        margin-top: -2rem
        
.big-footer__center
    grid-column-start: 4;
    grid-column-end: 10;
    text-align: center;

    @media $mobile
        grid-column-start: 3;
        grid-column-end: 11;

.footer-graphic-one
    position: absolute;
    left: -40px;
    max-width: 27vw;
    bottom: 60px;

    @media $mobile
        max-width: 210px;

.footer-graphic-two
    position: absolute;
    right: -60px;
    max-width: 23vw;
    bottom: 120px;

    @media $mobile
        max-width: 190px;
        bottom: 20px

.post-footer
    background: var(--background-post-footer)
    color: var(--background-footer-text)
    display: grid
    grid-template-columns: repeat(12, 1fr);
    grid-gap: 2.5rem;
    padding: 4.5rem 2.5rem

    @media $mobile
        grid-gap: 1.5rem
        padding: 2.5rem 1.5rem 0;

    ul
        list-style: none
        margin: 0
        
        @media $mobile
            padding-left: 0

    li:last-child a
        margin-bottom: 0

    a
        color: currentcolor
        text-decoration: none

    .col-3 p
        margin-top: 1rem

        @media $mobile
            margin-top: 0

    .col-3
        @media $mobile
            grid-column: span 4

    .col-6
        @media $mobile
            grid-column: span 4

    .col-3-last
        @media $mobile
            grid-column: span 12;
            display: flex;
            justify-content: space-between;
